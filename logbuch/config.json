{
  "name"    : "logbuch",

  "include" :
  [
    {
      "path" : "${QOOXDOO_PATH}/tool/data/config/application.json"
    }
  ],

  "export" :
  [
    "api",
    "build",
    "clean",
    "distclean",
    "fix",
    "inspector",
    "lint",
    "migration",
    "pretty",
    "profiling",
    "source",
    "test",
    "test-source",
    "translation",
    
    // QxTransformer
    "transform"
  ],

  "let" :
  {
    // Top-level folder
    "WORKSPACE_PATH" : "../..",
  
    // qooxdoo
    "APPLICATION"    : "logbuch", 
    //"QOOXDOO_PATH"   : "../../qooxdoo-contrib/qooxdoo/1.2",
    "QOOXDOO_PATH"   : "../../qooxdoo-contrib/qooxdoo/1.3-pre",
    "QXTHEME"        : "logbuch.theme.Theme",
    "LOCALES"        : [ "en","de" ],
    "ROOT"           : ".",
    //"CACHE"          : "${TMPDIR}/cache/1.2",
    "CACHE"          : "${TMPDIR}/cache/1.3-pre",
    "OPTIMIZE"       : ["variables", "basecalls", "strings"],

    // Contributions: download them from the repository (a)
    // or use absolute path to an existing checkout (b)
    // a)
    //"CONTRIB_PATH" : "contrib",  
    //"CONTRIB_LIB"  : "contrib:/",
    // b)
    "CONTRIB_PATH" : "${WORKSPACE_PATH}/qooxdoo-contrib", 
    "CONTRIB_LIB"  : "${CONTRIB_PATH}", 
    
    // API Viewer
    "API_INCLUDE" : [ "qx.*","${APPLICATION}.*", "qcl.*" ], 
    "API_EXCLUDE" : ["qx.legacy.*","qx.test.*","htmleditor.*"]
  },
  
  "jobs" :
  {
      
    "libraries" : 
    {
      "library" :
      [
       // qcl-js
       {
         "manifest" : "${CONTRIB_LIB}/qcl/trunk/Manifest.json"
       },
       /* qcl-php
       {
         "manifest" : "${CONTRIB_LIB}/qcl-php/trunk/Manifest.json"
       },
       // PHP JSON-RPC server
       {
         "manifest" : "${CONTRIB_LIB}/RpcPhp/trunk/Manifest.json"
       },    
       // HtmlEditor
       {
         "manifest" : "${CONTRIB_LIB}/HtmlEditor/trunk/Manifest.json"
       },*/ 
       // Dialogs 
       {
         "manifest" : "${CONTRIB_LIB}/Dialog/trunk/Manifest.json"
       },       
       // CollapsablePanel
       {
         "manifest" : "${CONTRIB_LIB}/CollapsablePanel/trunk/Manifest.json"
       },
       // Persist
       {
         "manifest" : "${CONTRIB_LIB}/Persist/trunk/Manifest.json"
       }, 
       // VirtualData
       {
         "manifest" : "${CONTRIB_LIB}/VirtualData/trunk/Manifest.json"
       },
       // Upload widget
       {
         "manifest" : "${CONTRIB_LIB}/UploadWidget/0.3/Manifest.json"
       },
       // Token Field
       {
         "manifest" : "${CONTRIB_LIB}/TokenField/trunk/Manifest.json"
       }                                      
      ]
    },
    
    // load third-party scripts before loading qooxdoo
    "common":
    {
      "add-script" :
      [
        // persist library: http://pablotron.org/software/persist-js/
        //{ "uri" : "../build/resource/persist/persist-all-min.js" },
        // promise library  
        //{ "uri" : "resource/logbuch/script/promise.js" }
      ]
    },
    
    // source generation only
    "source-script":
    {
      // download contrib code to location that is accessible to web server in source version
      "cache" :
      {
        "downloads" : "contrib"
      }
    },
    
    // build generation only
    "build" :
    {
      // don't optimize privates
      "compile-options" :
      { 
        "code" :
        {
          "=optimize" : ["variables", "basecalls", "strings"]
        }
      }
    }
  }
}
